pipeline {
	agent any
	tools { 
        maven 'Maven'  
          }
	environment {
     DOCKERHUB_USERNAME = "ravi338"
	 APP_NAME = "msa-banking-aws"
     SERVICE_NAME = "user"
     REPOSITORY_TAG="${DOCKERHUB_USERNAME}/${APP_NAME}-${SERVICE_NAME}:${BUILD_ID}"
	 }
	stages {
	         stage ('scm checkout') {
			       steps {
				    cleanWs()
					checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'GitHub-Ravi', url: 'https://github.com/Ravikiran338/k8s-cicd.git']]])
	                      }
                    }						  
			 stage ('build') {
			       steps {
				           sh label: '', script: '''cd /var/lib/jenkins/workspace/msa-user-DSL/microservices-user-service
                                                    mvn clean install
			                                     '''
					     }
					}					
			 stage ('deploy') {
			      steps {
				     sh label: '', script: '''
                                              cd /var/lib/jenkins/workspace/msa-user-DSL/microservices-user-service					 
											  docker rmi -f user
											  docker build -t ${REPOSITORY_TAG} .
											  docker login
                                              #docker tag user ${REPOSITORY_TAG}
                                              docker push ${REPOSITORY_TAG}
											  
											  
											  envsubst < /var/lib/jenkins/workspace/k8s-cicd-pipeline/user.yaml | kubectl apply -f -
										   '''										   
						}
					}
				}
			}
